<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GriyaKulinersReview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.GriyaKulinersReview" parent="Base.Theme.GriyaKulinersReview" />

    <style name="Star">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/star_outline</item>
        <item name="android:contentDescription">@string/star</item>
    </style>

    <style name="StarYellow">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/star_outline</item>
        <item name="android:tint">@color/yellow</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:contentDescription">@string/star</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>